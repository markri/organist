{% extends 'NetvliesPublishBundle::layout.html.twig' %}
{% form_theme form 'NetvliesPublishBundle:Form:extended_div_layout.html.twig' %}

{% block content %}

    <h3>Create nightly build</h3>
    <hr />

    <form action="" method="POST" class="form-horizontal" novalidate="novalidate">

        {{ form_widget(form._token) }}

        {{ form_widget(form) }}

        <br/>

        <div class="pull-right">
            <a href="{{ path('netvlies_publish_default_index') }}" class="btn btn-warning">Cancel</a>
            <input type="submit" value="Save" class="btn btn-default"/>
        </div>

    </form>

{% endblock %}
