<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>{% block oms_title %}Netvlies publishing{% endblock %}</title>
        <meta name="description" content="">
        <meta name="author" content="">

        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

        {% block oms_stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/netvliespublish/css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/netvliespublish/css/jquery.liveFilter.css') }}">
        {% endblock %}

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}

</head>

<body>
    {% block body %}
        <header role="banner">
            <a href="{{path('netvlies_publish_default_index')}}"><h1>Publishing tool</h1></a>
    	</header>
        <div id="subnav">
            <ul>
                {% block oms_projects %}
                    <li>
                        {% if application is defined %}
                            {{applicationselect(application.id)|raw}}
                        {% else %}
                            {{applicationselect()|raw}}
                        {% endif %}
                    </li>

                {% endblock %}

                {% if application is defined %}
                    {% block oms_project_options %}
                        <li>
                            <a href="{{ path('netvlies_publish_application_dashboard', {'id': application.id}) }}" >Dashboard</a>
                        </li>
                        <li>
                            <a href="{{ path('netvlies_publish_application_controlpanel', {'id': application.id}) }}" >Deploy/Rollback</a>
                        </li>
                        <li>
                            <a href="{{ path('netvlies_publish_application_targets', {'id': application.id }) }}">Targets</a>
                        </li>
                        <li>
                            <a href="{{ path('netvlies_publish_application_edit', {'id': application.id }) }}" >Settings</a>
                        </li>
                    {% endblock %}
                {% endif %}
            </ul>
        </div>


        {% for flash in app.session.flashbag.get('error') %}
            <div class="message error">{{ flash }}</div>
        {% endfor %}

        {% for flash in app.session.flashbag.get('success') %}
            <div class="message success">{{ flash }}</div>
        {% endfor %}

        {% for flash in app.session.flashbag.all %}
            <div class="message information">{{ flash }}</div>
        {% endfor %}

        {% block content %}

            {{ render(controller('NetvliesPublishBundle:Application:listWidget')) }}
        {% endblock %}
    {% endblock %}

    {% block oms_javascripts %}

        <script src="{{ asset('bundles/netvliespublish/js/libs/modernizr-2.0.6.min.js') }}"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ asset('bundles/netvliesoms/js/libs/jquery-1.7.min.js') }}"><\/script>')</script>
        <script src="{{ asset('bundles/netvliespublish/js/tiny_mce/jquery.tinymce.js') }}"></script>
        <script src="{{ asset('bundles/netvliespublish/js/libs/jquery-ui-1.8.16.custom.min.js') }}"></script>
        <script src="{{ asset('bundles/netvliespublish/js/libs/jquery.liveFilter.js') }}"></script>

        <script defer src="{{ asset('bundles/netvliespublish/js/oms/objects.js') }}"></script>
        <script defer src="{{ asset('bundles/netvliespublish/js/script.js') }}"></script>

        <!--[if lte IE 7 ]>
        <script src="http://ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
        <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
        <![endif]-->

    {% endblock %}

    </body>
</html>
