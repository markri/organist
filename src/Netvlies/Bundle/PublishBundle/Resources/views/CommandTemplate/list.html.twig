{% extends 'NetvliesPublishBundle::layout.html.twig' %}
{% block content %}

    <h3>Command templates</h3>
    <hr>
    <div class="table-responsive">

        <table class="table table-striped table-hover">
            <thead>
                <th>Strategy</th>
                <th>Title</th>
                <th></th>
            </thead>
            <tbody>
                {% for commandTemplate in commandTemplates %}
                    <tr>
                        <td>{{ commandTemplate.strategy.title }}</td>
                        <td>{{ commandTemplate.title }}</td>
                        <td>
                            <a href="{{ path('netvlies_publish_commandtemplate_edit', {'commandTemplate': commandTemplate.id}) }}"><span class="glyphicon glyphicon-pencil"></span> edit</a>
                            {#{% if environment.targets | length == 0 %}#}
                             {#| <a onclick="confirm('Are you sure you want to delete this server?')? window.location = '{{path('netvlies_publish_environment_delete', {'environment': environment.id})}}': false" href="#"><span class="glyphicon glyphicon-remove"></span> delete</a>#}
                            {#{% endif %}#}
                        </td>
                    </tr>
                {% else %}
                        <tr><td colspan="3">Oops, no command templates available</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('netvlies_publish_commandtemplate_create') }}" class="btn btn-default pull-right"><span class="glyphicon glyphicon-plus-sign"></span> Add command template</a>
{% endblock %}

