{% set settingstab = true %}
{% extends 'NetvliesPublishBundle::layout.html.twig' %}
{% block oms_project_name %}{{application.name}}{% endblock %}

{% block content %}
<div id="content-wrapper">

    <section id="content">
        <header>
            <h1>{{application.name}}</h1>
        </header>
        <hr />
        <div id="text">


        <form action="" method="POST">
            {% form_theme form 'NetvliesPublishBundle:Form:extended_div_layout.html.twig' %}
            {{ form_errors(form) }}
            {{ form_widget(form._token) }}

            {{ form_row(form.name) }}
            {{ form_row(form.customer) }}

            <ul class="userfiles" data-prototype="{{ form_widget(form.userFiles.vars.prototype)|e }}">
                {# iterate over each existing tag and render its only field: name #}
                {% for userfile in form.userFiles %}
                    <li>
                        {{ form_row(userfile.path) }}
                        {{ form_row(userfile.type) }}
                    </li>
                {% endfor %}
            </ul>




            <br/>
            <input type="submit" value="Opslaan" class="button"/>
            <a href="{{ path('netvlies_publish_application_dashboard', {'id': application.id}) }}" class="button">Annuleren</a>
            <br>
            <br>
            {% if deleteable %}
                <a href="{{ path('netvlies_publish_application_delete', {'id': application.id}) }}" class="button">Applicatie verwijderen</a>
            {% endif %}


        </form>
        </div>
        </section>
    </div>

{% endblock %}
