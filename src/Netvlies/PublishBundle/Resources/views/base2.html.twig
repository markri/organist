<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}Netvlies publishing{% endblock %}</title>
    {% block stylesheets %}
    <style type="text/css">
            * {
                font-family: Arial,Helvetica,sans-serif;
                font-size: 11px;
            }

            h1{
                font-size: 16px;
                font-weight: bold;
            }

            h2{
                font-size: 14px;
                font-weight: bold;
            }

        </style>
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    {% block head %}
    {% endblock %}

    </head>

    <body>

    {% block body %}
        <h1><img src="{{ asset('bundles/netvliespublish/images/netvlies_logo.gif') }}"/> OTAP publishing</h1>


        <table border="0">
            <tr>
                <td valign="top">

                    {% block menu %}
                        {% render "NetvliesPublishBundle:Application:list" %}
                    {% endblock %}
                </td>
                <td width="30">&nbsp;</td>
                <td valign="top">
                    {% block content %}
                    {% endblock %}
                </td>
            </tr>
        </table>
    {% endblock %}

    </body>
</html>